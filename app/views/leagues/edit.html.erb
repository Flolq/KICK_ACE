<h1><%= @league.name %></h1><p>(created by <%= @league.owner.nickname %>)</p>

<h2>Here are the teams that have joined the league</h2>
<ul>
  <% @teams.each do |team| %>
      <li><%= team.name %> (<%= team.user.nickname %>)  </li>
  <% end %>
</ul>


<div><%= link_to "Create a team to join the league!", new_league_team_path(@league) %></div>

<br>
<div>Invite your friends!</div>
<%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <% resource.class.invite_key_fields.each do |field| -%>
    <div class="form-inputs">
      <%= f.input field %>
    </div>
  <% end -%>

  <div class="form-actions">
    <%= f.button :submit, t("devise.invitations.new.submit_button") %>
  </div>
<% end %>


<br>
<%= link_to "homepage", user_path(current_user) %>
