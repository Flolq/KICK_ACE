<div class="container-resp">
  <div class="box-home">
    <!-- <h1>Hi <%= current_user.nickname %> !</h1>
    <div class="center"><%= image_tag 'logo-tennisman.png', width: '35vh' %></div> -->
    <div class="center"><h2 class="white">My Leagues</h2></div>
    <div class="scroll">
        <% @leagues.each do |league| %>
          <%= link_to league_path(league) do %>
            <div class="card-league" style="background: linear-gradient(rgba(0, 0, 0, 0.3),rgba(0, 0, 0, 0.3)), url('<%= cl_image_path league.photo.key %>');
                                            background-repeat: no-repeat;
                                            background-size: cover;
                                            background-position: center;">
              <!-- <div class="racket">
                <%= image_tag 'racket.png', width: '45vh' %>
              </div> -->
              <div><h3><%= league.name %></h3></div>
            </div>
          <% end %>
        <% end %>
    </div>
    <%= link_to new_league_path do %>
      <div class="card-league-add">+</div>
    <% end %>
  </div>
  <div class="box-home">
    <div class="center"><h2>News</h2></div>
    <div class="marquee">
      <div class="marquee-content">
        <% @html_doc.search(".breve").each do |element| %>
          <div class="carousel-news">
            <div class="atp-logo">
              <%= image_tag 'atp-logo.png', width: '65vh' %>
            </div>
            <div class="text-news">
              <p><%= element.text.strip %></p>
            </div>
            <%= link_to "Read article", "https://www.tennisactu.net/#{element.attribute("href").value}", target: "_blank" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
