<div class="navbar" data-controller="toggle-navbar">
    <div class="items">
      <div>
        <%= link_to root_path do %>
          <%= image_tag 'logo-kick-ace-white.png', width: '90px' %>
        <% end %>
      </div>
      <div class="navbar-user">
        <div class="navbar-nickname"><%= current_user.nickname if current_user %></div>
        <div class="button-navbar" data-action="click->toggle-navbar#toggle"><i class="fa-solid fa-bars"></i></div>
      </div>
    </div>
    <div class="d-none" data-toggle-navbar-target="link">
      <div class="link-navbar">
        <%= link_to "Account", root_path %>
        <%= link_to "Logout", destroy_user_session_path, method: :delete %>
      </div>
    </div>
</div>
