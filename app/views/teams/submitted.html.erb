
<div class="container text-center w-75" data-controller = "league-subscription" data-league-subscription-league-id-value="<%= @league.id %>">

  <div class="chatroom-title"><h1>Thanks for your bids</h1></div>
  <div class="back-shadow" >
  <div data-league-subscription-target = "notification">

  </div>
   <% if @league.all_ready?(@team.round_number) %>
    <%= render "notification" %>
   <% else %>
      <h3>Teams that have placed their bids</h3>
      <ul class="list-group"><%  @league.teams_submitted_waiting(@team.round_number).each do |team| %>
        <li class="list-group-item"><%= team.name %> || Player: <%= team.user.nickname %> </li>
      </ul>
      <h3>Waiting for the other players to bid...</h3>
      <% end %>
   <% end %>

  </div>

  <div class="back-shadow">
    <h3>Here is a recap of your bids</h3>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Player</th>
          <th scope="col">Your bid</th>
        </tr>
      </thead>
      <tbody>
      <% @kept_selections.each do |selection| %></ul>
        <tr>
          <td><%=selection.player.first_name%> <%=selection.player.last_name%></td>
          <td><%=selection.price%> mâ‚¬ </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to "Refresh", submitted_path(@league, @team), class: "btn btn-success" %>
</div>
