<div class="container text-center w-75">
  <br>
  <h1>League: <%= @team.league.name %></h1>
  <h2>The bidding round is now over!</h2>
  <h2>Your team: <%= @team.name %></h2>
  <br>
  <h3>Congratulations! You have secured the following players</h3>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Player</th>
        <th scope="col">Your winning bid</th>
      </tr>
    </thead>
    <tbody>
    <% @my_secured_selections.each do |selection| %></ul>
      <tr>
        <td><%=Player.find(selection[:player_id]).first_name%> <%=Player.find(selection[:player_id]).last_name%></td>
        <td><%=selection.price%> m€ </td>
      </tr>
    <% end %>
    <tr>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <td><strong>Your remaining budget</strong></td>
      <td><strong><%=@remaining_budget%> m€</strong> </td>
    </tr>
    </tbody>
  </table>



  <br>

  <h3>Here is a recap of the bids won by your opponents:</h3>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Player</th>
        <th scope="col">Winning bid</th>
        <th scope="col">Winning team</th>
        <th scope="col">Winning user</th>
      </tr>
    </thead>
    <tbody>
    <% @opponents_won_results.each do |result| %></ul>
      <tr>
        <td><%=Player.find(result[:player_id]).first_name%> <%=Player.find(result[:player_id]).last_name%></td>
        <td><%=result[:winning_selection].price%> m€ </td>
        <td><%=result[:winning_team].name%> </td>
        <td><%=result[:winning_user].nickname%> </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= link_to "Next round of bids!", extra_round_path(@league, @team), class:"btn btn-success"%>


</div>
