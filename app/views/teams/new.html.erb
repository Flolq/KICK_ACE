<div class="container-fluid">

  <h1>Welcome to the league <%= @league.name %></h1>
  <h2>Now is the time to create your team of champions</h2>

<br>
  <%= simple_form_for [@league, @team] do |f| %>
    <%= f.input :name, label: "Name of your team" %>
    <%= f.input :photo, as: :file %>
    <%= f.submit %>
  <% end%>
</div>
