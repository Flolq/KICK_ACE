<div id="players" data-controller="sortable" data-sortable-animation-value="150" data-sortable-resource-name-value="selection">
  <% @selections.each do |selection| %>
      <div class="card-product mb-4" data-sortable-update-url="<%= selection_path(selection) %>">
        <div class="card-product-infos">
          <h3><%= selection.player.first_name %></h3>
        </div>
      </div>
  <% end %>
</div>

