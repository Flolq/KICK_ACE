<div class="container text-center w-75">

  <div class="chatroom-title">
    <h1>Your team is ready</h1>
  </div>
  <% if @league.all_finalized? %>
      <div class="center mt-4"><%= link_to "See your team", [@league, @team], class: "bouton-transp-share" %></div>
    <% else %>
      <div class="back-shadow mb-4">
        <h3><i class="fa-solid fa-spinner rotate"></i> Bidding rounds still pending ...</h3>
      </div>
      <div class="center mt-2"><%= link_to "Refresh", final_path(@league, @team), class: "bouton-transp-share" %></div>
    <% end %>
  <div class="back-shadow mb-4">
    <table class="table">
      <h2><%= @team.name %></h2>
      <thead>
        <tr>
          <th scope="col">Player</th>
          <th scope="col">Bids</th>
        </tr>
      </thead>
      <tbody>
      <% @current_user_secured_selections.each do |selection| %></ul>
        <tr>
          <td><%=Player.find(selection[:player_id]).first_name%> <%=Player.find(selection[:player_id]).last_name%></td>
          <td><%=selection.price%> mâ‚¬ </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  </div>
</div>
